}

# Launch Vim solarized theme depending on the time of the day
vv() {
    echo $1
    hour=$(date +%H)
    theme=dark
    if [[ $hour -ge 6 && $hour -le 17 ]]; then
        theme=light
    fi
    terminator -l vim-solarized-$theme -c "vim -c 'set gb=$theme'"
}
