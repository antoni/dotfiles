# Uppercase first letter
function uppercase_first_letter() {
	convert_all_files "^"
}

# Lowercase all letters
function lowercase_all_letters() {
	convert_all_files "m,"
}

# Uppercase all letters
function uppercase_all_letters() {
	convert_all_files "^^"
}

