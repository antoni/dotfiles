# encrypt (filename -> filename.enc)
# $1 - input file
# $2 - password
function encrypt() {
    openssl enc -aes-256-cbc -in $1 -out $1.enc -k $2
}

# decrypt (filename.enc -> filename)
# $1 - input file
# $2 - password
function decrypt() {
    openssl enc -aes-256-cbc -d -in $1.enc -out $1 -k $2
}

# SSH and attach to tmux
function sshtmux() {
