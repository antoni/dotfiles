# Toggles VPN connection
function vpn() {
    vpn_conn="VPN"
    vpn_cmd="up"
    if [[ $(nmcli connection show --active | \grep VPN) ]]; then
        vpn_cmd="down";
    fi;

    nmcli connection $vpn_cmd id $vpn_conn | tr ' ' '\n' | \grep --color activated
}

