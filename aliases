csview() {
    local file="$1"
    cat "$file" | sed -e 's/,,/, ,/g' | column -s, -t | less -#5 -N -S
} 
# Custom cat: colourised and tabulated for CSV files alias cat='pygmentize -g'
xcat() { 
    filename=`basename $1`
    fileext=${filename##*.}
    if [ "$fileext" = "csv" ]; then
        csview $1
    else 
        pygmentize -g $1 
    fi
}

