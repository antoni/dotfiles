# Usage:
# extract_field_from_json package.json version
function extract_field_from_json() {
	local filename=$1
	local field_name=$2
	json_field_value=$(
		grep "$field_name" "$filename" |
			head -1 |
			awk -F: '{ print $2 }' |
			sed 's/[",]//g'
	)

	printf "%s" "$json_field_value" |
		xargs # trim
}

