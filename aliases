# Markdown to PDF
function md2pdf() {
    pandoc -s -V papersize:a4 -V geometry:margin=1in --from gfm -o $1.pdf $1
    open $1.pdf
}

function rst2pdf() {
    pandoc -s -V papersize:a4 -V geometry:margin=1in --from rst -o $1.pdf $1
    open $1.pdf
}

